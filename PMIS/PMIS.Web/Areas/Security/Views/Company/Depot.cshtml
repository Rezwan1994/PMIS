@{
    ViewData["Title"] = "Depot";
}
<link href="/css/site.css" rel="stylesheet">
<link href="/Design/vendor/select2/dist/css/select2.min.css" rel="stylesheet" type="text/css">


<div class="container-fluid" id="container-wrapper" ng-app="ngApp" ng-controller="ngGridCtrl">

    <div class="d-sm-flex align-items-center justify-content-between mb-4">
        <h4 class="h3 mb-0 text-gray-600">Depot</h4>
        <ol class="breadcrumb">
            @*<li class="breadcrumb-item"><a class="btn btn-outline-primary mb-1" href="~/Company/Depot">Depot List</a></li>*@
            <li class="breadcrumb-item"><a id="#modalCenter" class="btn btn-success text-white mb-1" data-toggle="modal" data-target="#exampleModalCenter" ng-click="SaveData(model)" ng-show="model.ADD_PERMISSION == 'Active'">Save</a></li>
        </ol>
    </div>

    <div class="card mb-4">
        <div class="card-body">
            <fieldset>
                <legend style="width:140px">Depot Entry</legend>

                <form name="formUnitAdd">
                    <div class="row" style="margin:20px">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label for="DEPOT_CODE"> Depot Code</label>
                                <input id="DEPOT_CODE" type="text" class="form-control" required
                                       name="DEPOT_CODE" ng-model="model.DEPOT_CODE">

                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label for="DEPOT_NAME">Depot Name</label>
                                <input type="text" class="form-control" autocomplete="off" required data-val="true"
                                       name="DEPOT_NAME" ng-model="model.DEPOT_NAME" placeholder="Enter Unit Name">
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label for="DEPOT_SHORT_NAME"> Short Name</label>
                                <input id="DEPOT_SHORT_NAME" type="text" class="form-control" required
                                       name="DEPOT_SHORT_NAME" ng-model="model.DEPOT_SHORT_NAME" placeholder="Enter Unit Short Name">

                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label for="DEPOT_ADDRESS">Address</label>
                                <input id="DEPOT_ADDRESS" type="text" class="form-control" required
                                       name="DEPOT_ADDRESS" ng-model="model.DEPOT_ADDRESS" placeholder="Enter Unit Address 2">
                            </div>
                        </div>
                    </div>
                </form>
            </fieldset>
        </div>
    </div>
    <div class="card mb-4">
        <div class="card-body">
            <fieldset>
                <legend style="width:140px">Depot List</legend>
                <div class="row" style="height: 57vh;">
                    <div class="col-lg-12 mb-4">
                        <div class="card" ng-show="model.LIST_VIEW == 'Active'" style="margin: 10px">
                            <div ui-grid="gridOptionsList" ui-grid-exporter ui-grid-auto-fit-columns ui-grid-resize-columns ui-grid-auto-resize
                                 style="font-family: 'Open Sans', Arial, sans-serif; color: #252222 !important; height: 50vh;" class="grid">
                            </div>
                        </div>
                    </div>
                </div>
            </fieldset>

        </div>
    </div>

    <partial name="~/Views/Shared/_Loader.cshtml" ng-show="showloader"></partial>


    <script src="~/ScriptsNg/Security/Company/Controller/DepotCtr.js"></script>
    <script src="~/ScriptsNg/Security/Company/Service/CompanyService.js"></script>
    <script src="~/ScriptsNg/Services/permissionProvider.js"></script>

    <script src="~/ScriptsNg/Services/gridRegistrationService.js"></script>
    <script src="~/Design/vendor/select2/dist/js/select2.min.js"></script>

    <script type="text/javascript">
        $(document).ready(function () {
            $(".select2-single").select2({
                placeholder: "Select...."
            });

        });
    </script>
</div>
