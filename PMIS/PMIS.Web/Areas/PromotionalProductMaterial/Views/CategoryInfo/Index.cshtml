@{
    ViewData["Title"] = "Employee Info";
    Layout = "_Layout";
}

<link href="/css/site.css" rel="stylesheet">
<link href="/Design/vendor/select2/dist/css/select2.min.css" rel="stylesheet" type="text/css">


<div class="container-fluid" id="container-wrapper" ng-app="ngApp" ng-controller="ngGridCtrl">

    <div class="d-sm-flex align-items-center justify-content-between">
        <h4 class="h3 mb-0 text-gray-600">Promotional Material Category Info</h4>
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a class="btn btn-outline-primary" href="/Security/Employee/EmployeeInfo">Reset</a></li>
            <li class="breadcrumb-item"><a id="#modalCenter" class="btn  btn-success text-white mb-1" ng-click="SaveData(model)">Save</a></li>
        </ol>
    </div>

    <div class="card mb-4">
        <div class="card-body">
            <fieldset>
                <legend style="width:160px">Category Entry</legend>

                <form name="formMenuCategoryAdd">
                    <div class="row" style="margin:20px">
                        <div class="col-md-4">
                            <div class="form-group">
                                <label for="PM_CATEGORY_CODE">PM Category Code</label>
                                <input id="PM_CATEGORY_CODE" type="text" class="form-control"
                                       name="PM_CATEGORY_CODE" ng-model="model.PM_CATEGORY_CODE" />
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="form-group">
                                <label for="PM_CATEGORY_NAME">Category Name</label>
                                <input type="text" class="form-control" autocomplete="off" data-val="true"
                                       name="PM_CATEGORY_NAME" ng-model="model.PM_CATEGORY_NAME" />
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="form-group">
                                <label for="REMARK">Remark</label>
                                <input type="text" class="form-control" autocomplete="off" data-val="true"
                                       name="REMARK" ng-model="model.REMARK" />
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="form-group">
                                <label for="STATUS">Status</label>
                                <input type="text" class="form-control" autocomplete="off" data-val="true"
                                       name="STATUS" ng-model="model.STATUS" />
                            </div>
                        </div>
                    
                      
                  
                    </div>
                </form>
            </fieldset>
        </div>

    </div>
    <div class="card mb-4">

        <div class="card-body">

            <fieldset>
                <legend style="width:250px">Category Display</legend>
                <div class="row" style="height: 57vh;">
                    <div class="col-lg-12 mb-4">
                        <div class="card" ng-show="model.LIST_VIEW == 'Active'" style="margin: 10px">
                            <div ui-grid="gridOptionsList" ui-grid-exporter ui-grid-auto-fit-columns ui-grid-resize-columns ui-grid-auto-resize
                                 style="font-family: 'Open Sans', Arial, sans-serif; color: #252222 !important; height: 50vh;" class="grid">
                            </div>
                        </div>
                    </div>
                </div>
            </fieldset>

        </div>


    <partial name="~/Views/Shared/_Loader.cshtml" ng-show="showloader"></partial>
    <script src="~/scriptsng/PromotionalProductMaterial/categoryinfo/controller/categoryinfoctr.js"></script>
    <script src="~/ScriptsNg/PromotionalProductMaterial/categoryinfo/Service/CategoryInfoService.js"></script>
    <script src="~/ScriptsNg/Services/permissionProvider.js"></script>
    <script src="~/ScriptsNg/Services/gridRegistrationService.js"></script>
</div>
