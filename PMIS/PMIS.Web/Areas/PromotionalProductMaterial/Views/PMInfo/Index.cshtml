@{
    ViewData["Title"] = "PM Info";
    Layout = "_Layout";
}

<link href="/css/site.css" rel="stylesheet">
<link href="/Design/vendor/select2/dist/css/select2.min.css" rel="stylesheet" type="text/css">


<div class="container-fluid" id="container-wrapper" ng-app="ngApp" ng-controller="ngGridCtrl">

    <div class="d-sm-flex align-items-center justify-content-between">
        <h4 class="h3 mb-0 text-gray-600">Promotional Material Info</h4>
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a class="btn btn-outline-primary" href="/Security/Employee/EmployeeInfo">Reset</a></li>
            <li class="breadcrumb-item"><a id="#modalCenter" class="btn  btn-success text-white mb-1" ng-click="SaveData(model)">Save</a></li>
        </ol>
    </div>

    <div class="card mb-4">
        <div class="card-body">
            <fieldset>
                <legend style="width:160px">PM Entry</legend>

                <form name="formMenuCategoryAdd">
                    <div class="row" style="margin:20px">
                        <div class="col-md-6 space-bottom">
                            <div class="row">
                                <div class="col-md-3">
                                    <label for="PM_CODE">PM Code</label>
                                </div>
                                <div class="col-md-9">
                                    <input id="PM_CODE" type="text" ng-disabled="model.PM_CATEGORY_CODE !='PMC001'?true:false" class="form-control"
                                           name="PM_CODE" ng-model="model.PM_CODE" />
                                </div>

                            </div>

                        </div>
                        <div class="col-md-6 space-bottom">
                            <div class="row">
                                <div class="col-md-3">
                                    <label for="STATUS">Status</label>
                                </div>
                                <div class="col-md-9">
                                    <select class="form-control" id="STATUS"
                                            name="STATUS" ng-model="model.STATUS" style="width:100%">
                                        <option ng-repeat="item in Statuses" ng-selected="item == model.STATUS" value="{{item}}">{{item}}</option>
                                    </select>
                                </div>

                            </div>

                        </div>
                        <div class="col-md-12 space-bottom">
                            <div class="row">
                                <div class="col-md-2">
                                    <label for="PM_NAME">PM Name</label>
                                </div>
                                <div class="col-md-10">
                                    <input type="text" class="form-control" autocomplete="off" data-val="true"
                                           name="PM_NAME" ng-model="model.PM_NAME" />
                                </div>

                            </div>

                        </div>

                        <div class="col-md-6 space-bottom">
                            <div class="row">
                                <div class="col-md-3">
                                    <label for="PACK_SIZE">Pack Size</label>
                                </div>
                                <div class="col-md-9">
                                    <input type="text" class="form-control" autocomplete="off" data-val="true"
                                           name="PACK_SIZE" ng-model="model.PACK_SIZE" />
                                </div>

                            </div>

                        </div>

                        <div class="col-md-6 space-bottom">
                            <div class="row">
                                <div class="col-md-3">
                                    <label for="PM_CATEGORY_CODE">Category Name</label>
                                </div>
                                <div class="col-md-9">
                                    <select class="form-control" id="PM_CATEGORY_CODE"
                                        name="PM_CATEGORY_CODE" ng-model="model.PM_CATEGORY_CODE" style="width:100%">
                                        <option ng-repeat="item in CategoryList" ng-selected="item.PM_CATEGORY_CODE == model.PM_CATEGORY_CODE" value="{{item.PM_CATEGORY_CODE}}">{{item.PM_CATEGORY_NAME}}</option>
                                    </select>
                                </div>

                            </div>

                        </div>

              

                    </div>
                </form>
            </fieldset>
        </div>

    </div>
    <div class="card mb-4">

        <div class="card-body">

            <fieldset>
                <legend style="width:250px">PM Display</legend>
                <div class="row" style="height: 57vh;">
                    <div class="col-lg-12 mb-4">
                        <div class="card" ng-show="model.LIST_VIEW == 'Active'" style="margin: 10px">
                            <div ui-grid="gridOptionsList" ui-grid-exporter ui-grid-auto-fit-columns ui-grid-resize-columns ui-grid-auto-resize
                                 style="font-family: 'Open Sans', Arial, sans-serif; color: #252222 !important; height: 50vh;" class="grid">
                            </div>
                        </div>
                    </div>
                </div>
            </fieldset>

        </div>


        <partial name="~/Views/Shared/_Loader.cshtml" ng-show="showloader"></partial>
        <script src="~/scriptsng/PromotionalProductMaterial/PMInfo/controller/PMInfoCtr.js"></script>
        <script src="~/ScriptsNg/PromotionalProductMaterial/PMInfo/Service/PMInfoService.js"></script>
        <script src="~/ScriptsNg/Services/permissionProvider.js"></script>
        <script src="~/ScriptsNg/Services/gridRegistrationService.js"></script>
    </div>
