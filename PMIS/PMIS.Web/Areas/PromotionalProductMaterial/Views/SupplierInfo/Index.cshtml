@{
    ViewData["Title"] = "Employee Info";
    Layout = "_Layout";
}

<link href="/css/site.css" rel="stylesheet">
<link href="/Design/vendor/select2/dist/css/select2.min.css" rel="stylesheet" type="text/css">

<div class="container-fluid" id="container-wrapper" ng-app="ngApp" ng-controller="ngGridCtrl">

    <div class="d-sm-flex align-items-center justify-content-between">
        <h4 class="h3 mb-0 text-gray-600">Supplier Info</h4>
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a class="btn btn-outline-primary" href="/PromotionalProductMaterial/CategoryInfo/Index">Reset</a></li>
            <li class="breadcrumb-item"><a id="#modalCenter" class="btn  btn-success text-white mb-1" ng-click="SaveData(model)">{{model.PM_CATEGORY_ID ==0?"Save":"Update"}}</a></li>

        </ol>
    </div>

    <div class="card mb-4">
        <div class="card-body">
            <fieldset>
                <legend style="width:350px">Supplier Info Entry</legend>

                <form name="formMenuCategoryAdd">
                    <div class="row" style="margin:20px">


                        <div class="col-md-6 space-bottom">
                            <div class="row">
                                <div class="col-md-4">
                                    <label for="SUPPLIER_CODE">Supplier Code</label>
                                </div>
                                <div class="col-md-8">
                                    <input id="SUPPLIER_CODE" type="text" class="form-control"
                                           name="SUPPLIER_CODE" ng-model="model.SUPPLIER_CODE" />
                                </div>
                            </div>
                        </div>



                        <div class="col-md-6 space-bottom">
                            <div class="row">
                                <div class="col-md-4">
                                    <label for="STATUS">Status</label>
                                </div>
                                <div class="col-md-8">
                                    <select class="form-control" id="STATUS"
                                            name="STATUS" ng-model="model.STATUS" style="width:100%">
                                        <option ng-repeat="item in Statuses" ng-selected="item == model.STATUS" value="{{item}}">{{item}}</option>
                                    </select>
                                </div>

                            </div>
                        </div>




                        <div class="col-md-12 space-bottom">
                            <div class="row">
                                <div class="col-md-2">
                                    <label for="SUPPLIER_NAME">Supplier Name</label>
                                </div>
                                <div class="col-md-10">
                                    <input type="text" class="form-control" autocomplete="off" data-val="true"
                                           name="SUPPLIER_NAME" ng-model="model.SUPPLIER_NAME" />
                                </div>

                            </div>
                        </div>



                        <div class="col-md-12 space-bottom">
                            <div class="row">
                                <div class="col-md-2">
                                    <label for="REMARKS">Remarks</label>
                                </div>
                                <div class="col-md-10">
                                    <input type="text" class="form-control" autocomplete="off" data-val="true"
                                           name="REMARKS" ng-model="model.REMARKS" />
                                </div>
                            </div>
                        </div>



                    </div>
                </form>
            </fieldset>
        </div>

    </div>
    <div class="card mb-4">

        <div class="card-body">

            <fieldset>
                <legend style="width:350px">Supplier Display</legend>

                <div class="row" style="height: 35vh;">

                    <div class="col-lg-12 mb-4">
                        <div class="card" ng-show="model.LIST_VIEW == 'Active'" style="margin: 10px">
                            <div ui-grid="gridOptionsList" ui-grid-exporter ui-grid-auto-fit-columns ui-grid-resize-columns ui-grid-auto-resize
                                 style="font-family: 'Open Sans', Arial, sans-serif; color: #252222 !important; height: 30vh;" class="grid">
                            </div>
                        </div>
                    </div>

                </div>

            </fieldset>

        </div>


        <partial name="~/Views/Shared/_Loader.cshtml" ng-show="showloader"></partial>
        <script src="~/scriptsng/PromotionalProductMaterial/categoryinfo/controller/categoryinfoctr.js"></script>
        <script src="~/ScriptsNg/PromotionalProductMaterial/categoryinfo/Service/CategoryInfoService.js"></script>
        <script src="~/ScriptsNg/Services/permissionProvider.js"></script>
        <script src="~/ScriptsNg/Services/gridRegistrationService.js"></script>
    </div>
